<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_6sdp"
        android:padding="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_100">

            <ImageView
                android:id="@+id/imgFirst"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_search_material"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_6sdp"
                app:layout_constraintBottom_toTopOf="@id/guildLineHorizontal"
                app:layout_constraintEnd_toStartOf="@id/guildLineVetical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgSecond"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/guildLineHorizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guildLineVetical"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgThird"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guildLineVetical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guildLineHorizontal" />

            <ImageView
                android:id="@+id/imgFourth"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guildLineVetical"
                app:layout_constraintTop_toBottomOf="@id/guildLineHorizontal" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutGroup"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/_6sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guildLineVetical"
                app:layout_constraintTop_toBottomOf="@id/guildLineHorizontal">

                <ImageView
                    android:id="@+id/imgFirstt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:src="@drawable/ic_search_material"
                    app:layout_constraintBottom_toTopOf="@id/guildLineHorizontall"
                    app:layout_constraintEnd_toStartOf="@id/guildLineVeticall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgSecondd"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:src="@drawable/ic_search_material"
                    android:paddingBottom="@dimen/_3sdp"
                    app:layout_constraintBottom_toTopOf="@id/guildLineHorizontall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guildLineVeticall"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgThirdd"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_search_material"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guildLineVeticall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guildLineHorizontall" />

                <ImageView
                    android:id="@+id/imgFourthh"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_search_material"
                    android:layout_height="0dp"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guildLineVeticall"
                    app:layout_constraintTop_toBottomOf="@id/guildLineHorizontall" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guildLineVeticall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guildLineHorizontall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guildLineVetical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guildLineHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_6sdp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>